    <script type="text/javascript">
        var clock;
        jQuery(document).ready(function () {
            {if isset($competition)}
            // Grab the current date
            var currentDate = new Date();

            {var $date = $competition->getStartDate()}
            var futureDate = new Date({$date->format('Y')}, {$date->format('m')}-1, {$date->format('d')}, {$date->format('H')}, {$date->format('i')});
            // Instantiate a coutdown FlipClock
            clock = jQuery('.clock').FlipClock(futureDate.getTime() / 1000 - currentDate.getTime() / 1000,
                    {
                        clockFace: 'DailyCounter',
                        countdown: true,
                        language: 'cs'
                    });
            {/if}
        });
    </script>
